{
  "name": "FastAPI with debugpy",
  "type": "python",
  "request": "launch",
  "program": "-m",
  "args": [
    "debugpy",
    "--listen", "5678",
    "--wait-for-client",
    "-m", "uvicorn",
    "api.main:app",
    "--reload",
    "--host", "127.0.0.1",
    "--port", "8000"
  ],
  "jinja": true,
  "envFile": "${workspaceFolder}/.env",
  "console": "integratedTerminal"
}
